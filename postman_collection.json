        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"0\": {\n    \"json\": {\n      \"username\": \"testuser\",\n      \"password\": \"password123\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/trpc/auth.signUp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "trpc", "auth.signUp"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"0\": {\n    \"json\": {\n      \"username\": \"admin\",\n      \"password\": \"Aa123456\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/trpc/auth.login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "trpc", "auth.login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.result.data.token) {",
                  "        pm.collectionVariables.set('authToken', response.result.data.token);",
                  "        if (response.result.data.role === 'ADMIN') {",
                  "            pm.collectionVariables.set('adminToken', response.result.data.token);",
                  "        } else if (response.result.data.role === 'STORE_ADMIN') {",
                  "            pm.collectionVariables.set('storeAdminToken', response.result.data.token);",
                  "        }",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Verify User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"0\": {\n    \"json\": {\n      \"username\": \"testuser\",\n      \"otp\": \"123456\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/trpc/auth.verifyUser",
              "host": ["{{baseUrl}}"],
              "path": ["api", "trpc", "auth.verifyUser"]
            }
          }
